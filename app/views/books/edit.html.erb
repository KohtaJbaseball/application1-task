<h2>Editing Book</h2>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

 <p>Title</p>
 <%= f.text_field :title %>

 <p>Body</p>
 <%= f.text_area :body %>

 <br><%= f.submit 'Update Book' %></br>

 <span>
  <%= link_to "Show", book_path(@book) %>
 </span>
 <span>
  <%= link_to "Back", "/" %>
 </span>


<% end %>
