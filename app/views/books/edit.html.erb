<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
<%= notice %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="field">
    <label for="book_title">Title</label>
    <br><%= f.text_field :title %></br>
  </div>

<div class="field">
    <label for="book_body">Body</label>
   <br><%= f.text_area :body %></br>
  </div>

 <div class="action">
    <%= f.submit 'Update Book' %>
  </div>

 <span>
  <%= link_to "Show", book_path(@book) %>
 </span>
 |
 <span>
  <%= link_to "Back", "/books" %>
 </span>


<% end %>
